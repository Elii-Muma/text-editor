{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "text-editor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/text-editor.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // ðŸ‘ˆ this is what you want
            "MIMode": "gdb",         // or "lldb" or "gdb" or "dbg" depending on your setup
            "miDebuggerPath": "gdb", // optional
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
